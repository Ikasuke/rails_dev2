<p> ここは、<%=@user.name%>さんのページです。
</p>

<div class="col-md-3">
 <div class="card p-2">
   <%= image_tag current_user.avatar.url, class: "card-img-top rounded-circle" %>
   <div class="card-body">
     <h4 class="card-title"><%= "@#{@user.name}" %></h4>
     <p class="card-text">
       <span class="text-secondary">ユーザー情報がここに入ります。</span>
     </p>
   </div>
 </div>
</div>


<h3>all To do</h3>
<%  @cate_does.each do |cate_do| %>
  <tr>
  <td><%= link_to cate_do[2],edit_to_do_item_path(cate_do[3]) %></td>
  <br>
  </tr>
<% end %>

<%= form_with model: ToDoItem.new do |f| %>
 <%= f.label :contents, "To_do追加" %>
 <%= f.text_field :title, placeholder: 'to do入力' %>
<%= link_to to_do_item_calendar_path do %>
     <i class="material-icons md-36">calendar_today</i>

     <% if params[:to_do_item].nil? %>
     <% else %>
  <%= f.hidden_field :start_date, value: Time.zone.local(params[:to_do_item]["start_date(1i)"].to_i, params[:to_do_item]["start_date(2i)"].to_i, params[:to_do_item]["start_date(3i)"].to_i) %>
    <%= f.hidden_field :start_time, value: Time.zone.local(params[:to_do_item]["start_time(1i)"].to_i, params[:to_do_item]["start_time(2i)"].to_i, params[:to_do_item]["start_time(3i)"].to_i, params[:to_do_item]["start_time(4i)"].to_i, params[:to_do_item]["start_time(5i)"].to_i) %>

    <%= f.hidden_field :end_date, value: Time.zone.local(params[:to_do_item]["end_date(1i)"].to_i, params[:to_do_item]["end_date(2i)"].to_i, params[:to_do_item]["end_date(3i)"].to_i) %>
      <%= f.hidden_field :end_time, value: Time.zone.local(params[:to_do_item]["end_time(1i)"].to_i, params[:to_do_item]["end_time(2i)"].to_i, params[:to_do_item]["end_time(3i)"].to_i, params[:to_do_item]["end_time(4i)"].to_i, params[:to_do_item]["end_time(5i)"].to_i) %>
    <% end %>

<% end %>
  <%= f.submit %>
 <br>
<%= f.select :category_id, @category_selects,{:prompt => "category"}, {:class => "category_tab"} %>

<% end %>


<h5>Categoryを追加する</h5>
<%= form_with model: Category.new do |f| %>
 <%= f.label :contents,  "category" %>
 <%= f.text_field :category_name %>
 <%= f.submit %>
<% end %>


<i class="material_icons">alarm</i>
<i class="material-icons md-36">alarm</i>
<i class="material-icons md-36">star_border</i>
