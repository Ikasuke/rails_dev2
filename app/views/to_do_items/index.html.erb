<p id="notice"><%= notice %></p>

<h1>all</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>complete</th>
      <th>Title</th>
      <th>Category</th>

      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Place</th>

      <th>Rank</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do_items.each do |to_do_item| %>
      <tr>
        <% if to_do_item.complete == "おわった" %>
           <td> 完了!</td>
         <% else %>
          <td> 未</td>
        <% end %>

        <td><%= to_do_item.title %></td>
        <td><%= to_do_item.category.category_name %></td>
        <% if to_do_item.start_at.blank? %>
         <td></td>
         <% else %>
        <td><%= to_do_item.start_at.strftime('%Y年%m月%d日%H時%M分')%></td>
        <% end %>
        <% if to_do_item.end_at.blank? %>
         <td></td>
         <% else %>
        <td><%= to_do_item.end_at.strftime('%Y年%m月%d日%H時%M分')%></td>
        <% end %>
        <td><%= to_do_item.place %></td>

        <td><%= to_do_item.rank %></td>

        <td><%= link_to 'Show', to_do_item %></td>
        <td><%= link_to 'Edit', edit_to_do_item_path(to_do_item) %></td>
        <td><%= link_to 'Destroy', to_do_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

