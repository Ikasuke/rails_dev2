<h1>all</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>

      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Place</th>
      <th>Memo</th>
      <th>Attachment</th>
      <th>Rank</th>
      <th>Remind</th>
      <th>Remind time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do_items.each do |to_do_item| %>
      <tr>
        <td><%= to_do_item.title %></td>
        <td><%= to_do_item.category.category_name %></td>

        <td><%= to_do_item.start_at%></td>
        <td><%= to_do_item.end_at %></td>
        <td><%= to_do_item.place %></td>
        <td><%= to_do_item.memo %></td>
        <td><%= to_do_item.attachment %></td>
        <td><%= to_do_item.rank %></td>
        <td><%= to_do_item.remind %></td>
        <td><%= to_do_item.remind_time %></td>
        <td><%= link_to 'Show', to_do_item %></td>
        <td><%= link_to 'Edit', edit_to_do_item_path(to_do_item) %></td>
        <td><%= link_to 'Destroy', to_do_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

